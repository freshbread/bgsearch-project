<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.boardgame.dnd.mapper.BoardGameMapper">
    <select id="selectBoardGameList" resultType="co.boardgame.dnd.data.BoardGame">
        <![CDATA[
        SELECT
            id
             , title
             , title_eng
             , weight
             , playtime
             , player
             , recommend
             , link
             , regdate
        FROM dnd_boardgame_list
        WHERE 1=1
          AND isdelete = 'N'
        ORDER BY ID;
        ]]>
    </select>
</mapper>